<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <%-include('../common/imports') %>
    <style>
        .login-box {
            margin-top: 20px;
            padding: 20px;
            position: absolute;
            width: 500px;
            left: 50%;
            transform: translateX(-250px);
            border: 1px solid #ddd;
            box-shadow: 5px 5px 10px 0px #eee;
            border-radius: 10px;
        }

        .login-box input {
            display: block;
            width: 100%;
            height: 40px;
            line-height: 40px;
            border: 1px solid #eee;
        }
    </style>
    <script>
        $(function() {
            // Login
            $('button[data-role=login]').click(() => {
                let data = new Object()
                data.id = $('#id').val().trim()
                data.password = $("#password").val().trim()

                if(isBlank(data.id)) {
                    alert('ID를 입력해주세요.')
                    return false
                }
                if(isBlank(data.password)) {
                    alert('Password를 입력해주세요.')
                    return false
                }

                $.ajax({
                    url: '/login',
                    type: 'POST',
                    data: data,
                    success: (result) => {
                        if(result.result) {
                            alert('로그인 성공')
                        } else {
                            alert(result.msg)
                        }
                    }
                })
            })
        })
    </script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="login-title text-center">
                    <h3>Login Page</h3>
                </div>
                <div class="login-box">
                    <form name="loginForm">
                        <div class="form-group">
                            <label for="id">ID</label>
                            <input type="text" id="id" name="id" placeholder="ID" class="login-ipt">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="text" id="password" name="password" placeholder="Password" class="login-ipt">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-block btn-warning" data-role="login">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>